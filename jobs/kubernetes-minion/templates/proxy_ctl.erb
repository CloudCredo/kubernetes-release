#!/bin/bash

RUN_DIR=/var/vcap/sys/run/proxy
PIDFILE=$RUN_DIR/proxy.pid
JOB_DIR=/var/vcap/jobs/proxy

source /var/vcap/packages/common/utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "proxy"

    mkdir -p $RUN_DIR
    chown -R vcap:vcap $RUN_DIR

    echo $$ > $PIDFILE

    exec chpst /var/vcap/packages/kubernetes/kube-proxy --master=<%= p('apiserver.host') %>:8080 --logtostderr=true
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;

  *)
    echo "Usage: proxy_ctl {start|stop}"

    ;;

esac
